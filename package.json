{
  "name": "fastify-bullmq",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.6.3",
  "description": "A template repository for deploying a BullMQ and Redis queueing system.",
  "author": "Nicolas Contiero (https://github.com/dkshs)",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently --kill-others --names \"build,server\" -c \"blue,black\" \"rslib build --watch\" \"pnpm dev:server\"",
    "dev:server": "pm2 start ecosystem.config.cjs --watch --env development && pm2 logs",
    "pm2:down": "pm2 delete all",
    "build": "rslib build",
    "start": "pm2-runtime start ecosystem.config.cjs --env production",
    "start:server": "pnpm start --only api",
    "start:worker": "pnpm start --only worker",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm typecheck",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "pre-commit": "lint-staged",
    "test:queues": "rslib build && node dist/test-queues.js",
    "test:railway": "rslib build && node dist/test-railway.js",
    "test:direct": "rslib build && node dist/test-direct.js",
    "test:connections": "rslib build && node dist/test-connections.js",
    "test:bull-board": "rslib build && node dist/test-bull-board.js",
    "test:redis-config": "rslib build && node dist/test-redis-config.js",
    "test:proxy-jobs": "rslib build && node dist/test-proxy-jobs.js",
    "test:sms-queues": "rslib build && node dist/test-sms-queues.js",
    "test:sms-api": "rslib build && node dist/test-sms-api.js",
    "test:direct-sms-api": "rslib build && node dist/test-direct-sms-api.js",
    "test:railway-redis": "rslib build && node dist/test-railway-redis-options.js",
    "test:delayed-sms": "rslib build && node dist/test-delayed-sms.js",
    "test:redis-ping": "rslib build && node dist/test-redis-ping.js",
    "test:delayed-sms-new": "rslib build && node dist/test-delayed-sms-new.js",
    "test:redis-ping-url": "rslib build && node dist/test-redis-ping-url.js",
    "test:redis-simple": "rslib build && node dist/test-redis-simple.js",
    "test:redis-node": "rslib build && node dist/test-redis-node.js",
    "test:email-queues": "rslib build && node dist/test-email-queues.js"
  },
  "dependencies": {
    "@bull-board/api": "^6.7.10",
    "@bull-board/fastify": "^6.7.10",
    "@bull-board/ui": "^6.7.10",
    "@fastify/reply-from": "^12.0.2",
    "@fastify/static": "^8.1.1",
    "@t3-oss/env-core": "^0.12.0",
    "@types/express": "^5.0.1",
    "axios": "^1.8.4",
    "bullmq": "^5.43.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fastify": "^5.2.1",
    "ioredis": "^5.6.0",
    "node-fetch": "^3.3.2",
    "pm2": "^6.0.5",
    "redis": "^4.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@dkshs/eslint-config": "^4.5.0",
    "@rslib/core": "^0.5.4",
    "@types/node": "^22.13.10",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
